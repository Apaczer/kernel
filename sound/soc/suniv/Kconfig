config SND_SUNIV_CODEC
	tristate "Allwinner f1c500s codec support"
	select SND_SOC_GENERIC_DMAENGINE_PCM
	select REGMAP_MMIO
	help
	  Select Y or M to add support for the Codec embedded in the Allwinner
	  A10 and affiliated SoCs.
config SND_SUNIV_CODEC_TYPE
	int "Miyoo handheld sound type"
	depends on SND_SUNIV_CODEC
	default 0
	help
	  Say 0 if you want to use the Miyoo/Bittboy/PocketGo sound
	  Say 1 if you want to use the M3 sound
	  Say 2 if you want to use the Q8 sound

